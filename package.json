{
  "name": "@delmaredigital/payload-puck",
  "version": "0.6.1",
  "description": "Puck visual page builder plugin for Payload CMS",
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./plugin": {
      "import": "./dist/plugin/index.js",
      "types": "./dist/plugin/index.d.ts"
    },
    "./config": {
      "import": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    },
    "./config/editor": {
      "import": "./dist/config/config.editor.js",
      "types": "./dist/config/config.editor.d.ts"
    },
    "./render": {
      "import": "./dist/render/index.js",
      "types": "./dist/render/index.d.ts"
    },
    "./client": {
      "import": "./dist/exports/client.js",
      "types": "./dist/exports/client.d.ts"
    },
    "./rsc": {
      "import": "./dist/exports/rsc.js",
      "types": "./dist/exports/rsc.d.ts"
    },
    "./layouts": {
      "import": "./dist/layouts/index.js",
      "types": "./dist/layouts/index.d.ts"
    },
    "./api": {
      "import": "./dist/api/index.js",
      "types": "./dist/api/index.d.ts"
    },
    "./admin/client": {
      "import": "./dist/admin/client.js",
      "types": "./dist/admin/client.d.ts"
    },
    "./theme": {
      "import": "./dist/theme/index.js",
      "types": "./dist/theme/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/exports.js",
      "types": "./dist/components/exports.d.ts"
    },
    "./fields": {
      "import": "./dist/fields/index.js",
      "types": "./dist/fields/index.d.ts"
    },
    "./editor": {
      "import": "./dist/editor/index.js",
      "types": "./dist/editor/index.d.ts"
    },
    "./ai": {
      "import": "./dist/ai/index.js",
      "types": "./dist/ai/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev-publish": "pnpm version prerelease --preid=dev && pnpm build && pnpm publish --registry http://localhost:4873",
    "generate-version": "node scripts/generate-version.js",
    "prebuild": "pnpm generate-version",
    "build": "tsc && pnpm copy:css",
    "copy:css": "cp src/fields/*.css dist/fields/ 2>/dev/null || true && mkdir -p dist/fields/richtext && cp src/fields/richtext/*.css dist/fields/richtext/ 2>/dev/null || true && cp src/editor/*.css dist/editor/ 2>/dev/null || true",
    "dev": "pnpm generate-version && tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "@payloadcms/next": ">=3.69.0",
    "@payloadcms/ui": ">=3.69.0",
    "@puckeditor/core": ">=0.21.0",
    "@tailwindcss/postcss": ">=4.0.0",
    "next": ">=15.4.8",
    "payload": ">=3.69.0",
    "postcss": ">=8.0.0",
    "react": ">=19.2.1",
    "tailwindcss": ">=3.0.0 || >=4.0.0",
    "zod": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "@payloadcms/ui": {
      "optional": true
    },
    "@payloadcms/next": {
      "optional": true
    },
    "postcss": {
      "optional": true
    },
    "tailwindcss": {
      "optional": true
    },
    "@tailwindcss/postcss": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "dependencies": {
    "@puckeditor/cloud-client": "^0.5.0",
    "@puckeditor/plugin-ai": "^0.5.0",
    "@puckeditor/plugin-heading-analyzer": "^0.21.0",
    "@tiptap/core": "^3.14.0",
    "@tiptap/extension-color": "^3.14.0",
    "@tiptap/extension-highlight": "^3.14.0",
    "@tiptap/extension-link": "^3.14.0",
    "@tiptap/extension-subscript": "^3.15.3",
    "@tiptap/extension-superscript": "^3.15.3",
    "@tiptap/extension-text-align": "^3.14.0",
    "@tiptap/extension-text-style": "^3.14.0",
    "@tiptap/extension-underline": "^3.14.0",
    "@tiptap/react": "^3.14.0",
    "@tiptap/starter-kit": "^3.14.0",
    "html-react-parser": "^5.2.11",
    "lucide-react": "^0.469.0"
  },
  "devDependencies": {
    "@payloadcms/next": "^3.69.0",
    "@payloadcms/ui": "^3.69.0",
    "@puckeditor/core": "^0.21.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "next": "^16.1.1",
    "payload": "^3.69.0",
    "react": "^19.2.3",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "payload",
    "payloadcms",
    "payload-plugin",
    "puck",
    "page-builder",
    "visual-editor",
    "cms"
  ],
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  },
  "author": "Delmare Digital",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/delmaredigital/payload-puck.git"
  },
  "bugs": {
    "url": "https://github.com/delmaredigital/payload-puck/issues"
  },
  "homepage": "https://delmaredigital.com/developers"
}
